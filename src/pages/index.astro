---
import BubblingGame from '../components/BubblingGame.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Home Page";
---
<head>
  <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">
</head>

<style>
  h1{
    font-size: 600%;
    text-align: right;
    font-family: 'Kaushan Script', cursive;
    font-style: italic;
  }
  .base{
    display: flex;
    justify-content: space-around;
  }
  .profile{
    object-fit:contain;    
    border-radius:100%;
    height:600px;
    width: 500px;
  }
</style>

<BaseLayout>
  <div class="base">
    <img src="public/images/IMG_20230701_152513.png" class="profile">
    <div>
      <h1>Welcome</h1>
      <h1>To My Portfolio</h1>
    </div>
  </div>
  <hr>
</BaseLayout>
